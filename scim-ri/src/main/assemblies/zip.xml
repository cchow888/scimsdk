<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>scim-ri</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <fileSets>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>${project.basedir}/src/main/assemblies</directory>
            <includes>
                <include>README.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>${project.build.directory}</directory>
            <includes>
                <include>3RD_PARTY_LICENSES.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>${main.basedir}/resource/licenses</directory>
            <includes>
                <include>LICENSE*.txt</include>
            </includes>
            <excludes>
                <exclude>licenseTable.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>javadoc</outputDirectory>
            <directory>${project.build.directory}/javadoc</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>server</outputDirectory>
            <directory>${project.basedir}/src/main/assemblies/server</directory>
            <includes>
                <include>ldif/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>server/tools</outputDirectory>
            <directory>${project.basedir}/src/main/assemblies/server/tools</directory>
            <includes>
                <include>*.bat</include>
            </includes>
            <lineEnding>crlf</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>server/tools</outputDirectory>
            <directory>${project.basedir}/src/main/assemblies/server/tools</directory>
            <excludes>
                <exclude>*.bat</exclude>
            </excludes>
            <lineEnding>lf</lineEnding>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>server/config</outputDirectory>
            <directory>${main.basedir}/resource</directory>
            <includes>
                <include>resources.xsd</include>
                <include>resources.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>client</outputDirectory>
            <directory>${project.basedir}/src/main/assemblies/client</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>client/src/main/java</outputDirectory>
            <directory>${project.build.sourceDirectory}</directory>
            <includes>
                <include>com/unboundid/scim/ri/client/*.java</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>server/lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>
